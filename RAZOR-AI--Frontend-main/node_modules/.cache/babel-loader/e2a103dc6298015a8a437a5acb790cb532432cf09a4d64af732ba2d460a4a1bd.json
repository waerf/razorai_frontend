   ></el-switch>\n        </div>\n        <div class=\"setting-item\">\n          <label for=\"theme-color\">主题颜色:</label>\n          <select v-model=\"themeColor\" @change=\"changeTheme\">\n            <option value=\"default\">默认</option>\n            <option value=\"blue\">蓝色</option>\n            <option value=\"green\">绿色</option>\n          </select>\n        </div>\n      </div>\n\n      <div class=\"setting-group right\">\n        <h2>语言设置</h2>\n        <div class=\"setting-item\">\n          <label for=\"language\">语言:</label>\n          <select v-model=\"language\" @change=\"changeLanguage\">\n            <option value=\"en\">英语</option>\n            <option value=\"zh\">中文</option>\n            <option value=\"fr\">法语</option>\n          </select>\n        </div>\n\n        <h2>权限设置</h2>\n        <div class=\"setting-item\">\n          <label>修改权限:</label>\n          <el-button @click=\"modifyPermissions\">修改权限</el-button>\n        </div>\n\n        <h2>历史记录</h2>\n        <div class=\"setting-item\">\n          <label>查看历史浏览记录:</label>\n          <el-button @click=\"viewHistory\">查看</el-button>\n        </div>\n      </div>\n    </div>\n\n    <div class=\"button-group\">\n      <el-button type=\"primary\" @click=\"saveSettings\">保存设置</el-button>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'UserSetting',\n  data() {\n    return {\n      isDarkMode: false,\n      themeColor: 'default',\n      language: 'en',\n    };\n  },\n  methods: {\n    switchAccount() {\n      this.$message.info('切换账号功能待实现');\n    },\n    toggleMode() {\n      this.$message.success(\n        `已切换到 ${this.isDarkMode ? '暗黑模式' : '亮色模式'}`\n      );\n    },\n    changeTheme() {\n      this.$message.success(`主题颜色已更改为 ${this.themeColor}`);\n    },\n    changeLanguage() {\n      this.$message.success(`语言已更改为 ${this.language}`);\n    },\n    modifyPermissions() {\n      this.$message.info('修改权限功能待实现');\n    },\n    viewHistory() {\n      this.$message.info('查看历史记录功能待实现');\n    },\n    saveSettings() {\n      console.log('Settings saved:', {\n        isDarkMode: this.isDarkMode,\n        themeColor: this.themeColor,\n        language: this.language,\n      });\n      this.$message.success('设置已保存！');\n    },\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n@use '@/assets/styles/mixins.scss' as *;\n.settings-page {\n  max-width: 100%;\n  height: 100%; /* 自适应高度 */\n  padding: 20px;\n  background-color: #1e1e1e; /* 深色背景 */\n  @include box-shadow(0 4px 20px rgba(0, 0, 0, 0.2)); // 使用 SCSS 混合宏\n  color: #ffffff; /* 白色文字 */\n  display: flex;\n  flex-direction: column;\n  justify-content: flex-start;\n}\n\n.title {\n  font-size: 2em;\n  text-align: center;\n  margin-bottom: 10px;\n}\n\n.description {\n  text-align: center;\n  margin-bottom: 20px;\n  color: #aaa; /* 灰色文字 */\n}\n\n.settings-container {\n  display: flex;\n  justify-content: space-between; /* 左右排列 */\n  flex: 1; /* 占满剩余空间 */\n}\n\n.settings-container {\n  @include fadeIn(0.5s); // 使用 SCSS 混合宏\n}\n\n.setting-group {\n  width: 45%; /* 每个设置组宽度 */\n  margin: 0 10px; /* 左右间距 */\n  padding: 15px;\n  background-color: #2a2a2a; /* 每个设置组的背景 */\n  border-radius: 5px; /* 圆角 */\n}\n\n.setting-item {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  padding: 10px 0;\n  animation: fadeIn 2s ease; /* 动画效果 */\n}\n\n.setting-item label {\n  flex: 1;\n  margin-right: 10px;\n}\n\n.setting-item select {\n  flex: 2;\n  padding: 8px;\n  border: none;\n  border-radius: 4px;\n  background-color: #444; /* 输入框背景 */\n  color: #fff; /* 输入框文字颜色 */\n  transition: background-color 0.3s; /* 动画 */\n}\n\n.setting-item select:focus {\n  background-color: #555; /* 聚焦时的背景颜色 */\n}\n\n.button-group {\n  display: flex;\n  justify-content: center;\n  margin-top: 20px;\n}\n</style>\n"],"mappings":"AAmEA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,UAAA;MACAC,UAAA;MACAC,QAAA;IACA;EACA;EACAC,OAAA;IACAC,cAAA;MACA,KAAAC,QAAA,CAAAC,IAAA;IACA;IACAC,WAAA;MACA,KAAAF,QAAA,CAAAG,OAAA,CACA,aAAAR,UAAA,